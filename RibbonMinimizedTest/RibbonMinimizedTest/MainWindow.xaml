<RibbonWindow x:Class="RibbonMinimizedTest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RibbonMinimizedTest"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <StackPanel Orientation="Vertical">
    <Ribbon>
            <Ribbon.QuickAccessToolBar>
                <RibbonQuickAccessToolBar>
                    <RibbonButton SmallImageSource="/RibbonMinimizedTest;component\Images\GE16x16.bmp" Label="icon"/>
                </RibbonQuickAccessToolBar>
            </Ribbon.QuickAccessToolBar>
            
        <RibbonTab Header="Home">
            <RibbonGroup Header="Test">
                <RibbonButton Label="Hello"/>
            </RibbonGroup>
        </RibbonTab>
    </Ribbon>
        <TextBlock>Hello World</TextBlock>
    </StackPanel>
